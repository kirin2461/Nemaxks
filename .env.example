# ===========================================
# Nemaxks Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# REQUIRED - Core Configuration
# ===========================================

# Database connection string (PostgreSQL)
# Format: postgres://user:password@host:port/database?sslmode=disable
DATABASE_URL=postgres://username:password@localhost:5432/nemaxks?sslmode=disable

# JWT Secret Key - MUST be changed in production!
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server port
PORT=8000

# ===========================================
# REQUIRED FOR PRODUCTION - Security
# ===========================================

# Frontend URL for CORS configuration
# In development, leave empty to allow all origins
# In production, set to your frontend domain
FRONTEND_URL=https://your-frontend-domain.com

# ===========================================
# OPTIONAL - Redis Configuration
# ===========================================

# Redis URL for caching and sessions
# Leave empty to disable Redis features
REDIS_URL=redis://localhost:6379

# ===========================================
# OPTIONAL - LiveKit Voice/Video
# ===========================================

# LiveKit server configuration for voice/video calls
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret
LIVEKIT_URL=wss://your-livekit-server.com

# ===========================================
# OPTIONAL - AI Integration
# ===========================================

# DeepSeek AI API
DEEPSEEK_API_KEY=your-deepseek-api-key

# OpenAI API (for GPT models)
OPENAI_API_KEY=your-openai-api-key

# HuggingFace API
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Ollama local AI server
OLLAMA_HOST=http://localhost:11434

# ===========================================
# OPTIONAL - Telegram Integration
# ===========================================

# Telegram Bot for notifications
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/1470

# ===========================================
# OPTIONAL - File Storage
# ===========================================

# Maximum file upload size in MB
MAX_UPLOAD_SIZE=10

# Upload directory path
UPLOAD_DIR=./uploads

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# Set to 'development' for debug mode
# Set to 'production' for production mode
GIN_MODE=release

# Enable debug logging
DEBUG=false
